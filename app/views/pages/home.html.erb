<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/flagged/photo-1559717865-a99cac1c95d8?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2371&q=80);">
  <h1>HAPPY TOURS</h1>
  <p>Reconnect to your world with us!</p>
  <div class="row justify-content-center">
        <h2> <%= link_to "Click to tour Dubai!", tours_path, class: 'btn-purple btn-lg' %> </h2>
      </div>
</div>

<div class="container position absolute">
  <div class="row">
    <div class="row justify-content-center">
      <h1>Top 3 Tours in Dubai</h1>
      <div class="cards">
        <% @tours.each do |tour| %>
          <%= link_to tour do %>
            <div class="card-category position relative", style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path tour.photos.first.key %>); mx-3">
              <%= tour.title %>
            </div>
          <% end %>
        <% end %>
              </div>
              <div style="text-align:center">
                <%= "Book the best, most entertaining tours in Dubai with
                    Happy Tours!" * 10 %>
      </div>
    </div>
  </div>

</div>
