                      <div class="row align-items-center">

                        <div class="col-1">
                          <div class="avatar">
                            <%= cl_image_tag booking.tour.photos.first.key, class: "avatar-img rounded-circle w-100" %>
                          </div>
                        </div>

                        <div class="col-6 ms-n5">


                          <!-- Heading -->
                          <p class="mb-0">
                            <%= booking.tour.title %>
                          </p>


                          <%# tag %>
                          <span class="badge bg-primary text-white my-2"><%= booking.tour.category %></span>

                          <!-- Text -->
                          <a class="d-block small text-truncate text-gray-700" href="mailto:ab.hadley@company.com">
                            <%= booking.tour.description %>
                          </a>

                        </div>
                        <div class="col-5 ms-auto" style="text-align: end;">

