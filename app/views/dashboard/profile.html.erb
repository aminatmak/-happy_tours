                      </div>
                    </div>

                    <!-- List -->
                    <ul class="card-list list text-gray-700 mb-6" style="list-style: none;">
                      <li class="llist-item mb-3">
                        <h6 class="text-muted">Full Name</h6>
                        <a class="list-link text-reset" href="account-general.html">
                          <%= current_user.first_name %> <%= current_user.last_name %>
                        </a>
                      </li>
                      <li class="list-item mb-3">
                        <h6 class="text-muted">Phone Number</h6>
                        <a class="list-link text-reset" href="account-security.html">
                          <%= current_user.phone_number %>
                        </a>
                      </li>
                      <li class="list-item">
                        <h6 class="text-muted">Anniversary</h6>
                        <a class="list-link text-reset" href="account-notifications.html">
                          <%= current_user.birth_date %>
                        </a>
                      </li>
                    </ul>


                  </div>
                </div>

              </div>

            </div>
            <div class="col-12 col-md-9">

              <!-- Card -->
