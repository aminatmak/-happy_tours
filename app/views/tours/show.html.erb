<div class="container">

  <div class="card mb-3">

    <h1 class="card-title"><%= @tour.title %></h1>
    <%= cl_image_tag @tour.photos.first.key %>
    <div class="card-body">
    <div class="row">
      <div class="col-7">
        <div>
          <h2>About</h2>
          <h5 class="card-text">
          <%= @tour.description %>
          </h5>

          <div class="d-flex">
            <h5 class="d-flex p-2 w-100 bd-highlight">Category:
            <%= @tour.category %>
            </h5>
          </div>
        </div>
      </div>
      <div class="col-5">
        <div class="card-date">
          <h5 class="d-flex p-2 text-bold flex-shrink-1 bd-highlight">AED<%= @tour.price %> </h5>
          <div class="d-flex justify-content-between text-bold flex-shrink-1 bd-highlight">
            <p><small class="text-muted">Start date:
            <%= @tour.start_date %>
            </small>
            </p>
            <p><small class="text-muted">End date:
            <%= @tour.end_date %>
            </small>
            </p>
          </div>
          <div class="btn btn-primary w-100">Book Now</div>
        </div>
      </div>
    </div>


      <div class="d-flex justify-content-center">
      <% if user_signed_in? %>
        <% if policy(@tour).edit? %>
          <%= link_to 'Edit', edit_tour_path(@tour), class: 'btn btn-warning' %> |
        <% end %>

        <!-- Only the owner of the tour can destroy -->
        <% if policy(@tour).destroy? %>
          <%= link_to 'Destroy', @tour, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>|
        <% end %>
      <% end %>
      <%= link_to 'Back', tours_path, class:"btn btn-secondary" %>
    </div>
    </div>
  </div>
</div>


